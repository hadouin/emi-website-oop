model User {
  id             Int           @id
  role           Role?
  email          String        @unique
  password       String?
  name           String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?
}

model Organization {
  id     Int      @id
  name   String?
  User   User[]
  Worker Worker[]
}

model Worker {
  id             Int          @id
  name           String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
  Log            Log[]
}

model Device {
  id      Int      @id
  serial  String
  sensors Sensor[]
  Log     Log[]
}

model Log {
  id       String   @id @default(uuid())
  datetime DateTime
  sensor   Sensor?
  value    Int?
  device   Device?  @relation(fields: [deviceId], references: [id])
  worker   Worker?  @relation(fields: [workerId], references: [id])
  deviceId Int?
  workerId Int?
}

enum Role {
  ADMIN
  MANAGER
  USER
}

enum Sensor {
  TMP
  HUM
  BPM
  AIR
}